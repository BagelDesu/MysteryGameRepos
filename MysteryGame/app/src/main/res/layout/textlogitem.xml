<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="85dp" android:background="#000000">

    <TextView
        android:id="@+id/logNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/logDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/logNameText"
        android:text="date:11/11/11"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/logEntryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logNameText"
        android:text="This is a test Entry to check whether the size is ok or not"
        android:textColor="#ffffff" />
</RelativeLayout>